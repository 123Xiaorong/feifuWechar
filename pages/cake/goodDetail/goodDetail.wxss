/* pages/cake/goodDetail/goodDetail.wxss */
.goodDetailLunbo{
  width: 100%;
  height: 100%;
}
.detailImg{
  width: 100%;
}
.goodDteail{
  display: flex;
  flex-direction: column;
  margin: 0 15rpx;
  margin-top: 20rpx;
  justify-content: space-between
}
.goodName{
  position: relative;
  /* border: 1px solid red; */
  height: 120rpx;
}
.goodName>span:nth-child(1){
  font-weight: bolder;
  font-size: 28rpx;
  display: inline-block;
  width: 85%;
  position: absolute;
  top: 0;
  left: 0;
  height: 60rpx;
  line-height: 60rpx;
  color: #3e3e3e;
  padding-left: 10rpx;
}
.goodName>span:nth-child(2){
  color: green;
  font-size: 28rpx;
  display: inline-block;
  width: 15%;
  position: absolute;
  top: 0;
  left: 85%;
  height: 60rpx;
  line-height: 60rpx;
}
.goodName>span:nth-child(3){
  color: #ff4001;
  font-size: 32rpx;
  font-weight: bolder;
  display: inline-block;
  width: 100%;
  position: absolute;
  left: 0;
  top: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 10rpx;
}
.yunfei{
  /* border: 1px solid blue; */
  font-size: 26rpx;
  color: rgb(187, 182, 182);
  padding-bottom: 8rpx;
  border-bottom: 1px solid #ddd;
  padding-left: 10rpx;
}
.goodSize{
  padding-bottom: 8rpx;
  border-bottom: 1px solid #ddd;
  margin: 8rpx 0;
}
.goodSize span{
  display: inline-block;
  width: 50%;
  font-size: 25rpx;
  color: #646060;
  text-align: center;
  
}
.goodMaterial h1{
  display: block;
  font-size: 25rpx;
  color: #646060;
  padding-bottom: 8rpx;
}
.goodMaterial>h1:nth-child(1){
  width: 66%;
  text-align: center;
  margin: 0 auto;
  padding: 10rpx 0;
}
.goodMaterial>h1:nth-child(2){
  text-align: center;
  margin: 0 auto;
  border-bottom: 1px solid #ddd;
  /* border-top: 1px solid #ddd; */
  padding: 10rpx 40rpx;
}

