/* pages/cake/index/index.wxss */
/* 轮播图 */
.container{
  padding: 0;
  margin: 0;
}
.swiper{
    width:100%;
    margin:0rpx;
}
.swiper image{
    display: inline;
}
/* 搜索商品 */
.weui-cell_input{
  background-color: rgb(228, 231, 231);
  height: 75rpx;
  overflow: hidden;
  display: flex;
}
.weui-input{
 background-color:white;
 margin:15rpx;
 margin-left: 12px;
 border-radius: 16rpx;
 padding-left: 20rpx;
 font-size: 28rpx;
 width: 90%;
}
.searchBtn{
   padding-right:3%;
   line-height: 75rpx;
}
/* 分类查看 */
.nav_top{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    width:100%;
    box-sizing: border-box;
    padding:20rpx 10rpx;
}
.nav_top_items{
    text-align: center;
    font-size:28rpx;
    width:100rpx;
    border-radius:8rpx;
    box-sizing:border-box;
}
.nav_top_items image{
    width:83rpx;
    height:93rpx;
    display: inline-block;
}
.nav_top_items text{
    color:#eb6100;
    font-size: 24rpx;
}
.nav_top .active{
    color:#38b337;
}
.active_red{
    color:#e5004f;
}
.active_orange{
    color:#eb6100;
}
.active_yellow{
    color:#fff100;
}
.active_green{
    color:#8fc31f;
}
.active_purple{
    color:#aa2adf;
}


/* 商品展示 */
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
/* 商品名称 */
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#3e3e3e;
    margin-bottom:6rpx;
}
/* 商品价格 */
.nav_section_items .section_cont .section_cont_price{
    font-size:28rpx;
    color:rgb(224, 83, 83);
     margin-bottom:8rpx;
}
.nav_section_items .section_purse{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    background:#ff4001;
    line-height: 80rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}

